<?xml version="1.0"?>
<task name="Insert audio from a file" id="EXP16.PPT.04.03.01.T1">
	<preload>
		<comps>
			<comp id="1" name="SIMS.Components.PPT.Ribbon" cssclass="SIMS_Ribbon_PPT" type="default"/>
			<comp id="2" name="SIMS.Components.PPT.SlideView" cssclass="SlideViewComponent" type="default"/>
			<comp id="3" name="SIMS.Components.Common.TaskBar" cssclass="SIMS_TaskBar" type="default"/>
			<comp id="4" name="SIMS.Components.PPT.VideoPlaceholderV2" cssclass="VideoPlaceholder" type="default"/>
			<comp id="5" name="SIMS.Components.Common.InsertFileDialog" cssclass="SaveAsDialog" type="modaldialog" title="Insert Audio"/>
		</comps>
		<resources>
			<res path="XMLs/TaskXmls2016/exp/pp/04/03.01.t1/Assets/SlideRes1.xml" type="xml"/>
		</resources>
	</preload>
	<texts_formatted>
		<txt id="1" StateStart="1">
			<![CDATA[Insert the <i>Beethoven&rsquo;s_Symphony_No_9.wma</i> audio file from the Documents folder onto Slide 1 of the PowerPoint Presentation.]]>
		</txt>
	</texts_formatted>
	<states>
		<state id="1" desc="MS PowerPoint File" txt="1">
			<comps>
				<comp id="5" mode="remove"/>
				<comp id="1" mode="new">
					<sizeandpos>
						<attr name="left" value="0"/>
						<attr name="top" value="0"/>
						<attr name="width" value="*"/>
						<attr name="height" value="150"/>
					</sizeandpos>
					<initialattrs>
						<attr name="RIBBON_PATH" value="app/comps2016/Common/Ribbon/ppt-ribbon.xml"/> // fixed
						<attr name="DOCUMENT_NAME" value="p04h3Memory - PowerPoint"/> // mandatory input - text
						<attr name="LEFT_ALIGN" value="true"/> // cosmetic
						<attr name="FONT_NAME" value="Trebuchet MS (Headings)"/> // cosmetic
					</initialattrs>
					<events>
						<event id="5140" followup="2" desc="insert audio clicked from ribbon">
							<validate>
								<comp id="2"/>
							</validate>
						</event>
					</events>
				</comp>
				<comp id="2" mode="new">
					<sizeandpos>
						<attr name="left" value="0"/>
						<attr name="top" value="145"/>
						<attr name="width" value="*"/>
					</sizeandpos>
					<initialattrs>
						<attr name="XML_PATH" value="XMLs/TaskXmls2016/exp/pp/04/03.01.t1/Assets/SlideRes1.xml"/> // input -   dropzone  -  based on this no. of no. of dropzones will be created in which images will be uploaded.
						<attr name="SELECTED_SLIDE" value="1"/>  // optional input or cosmetic  -  initial selected slide
					</initialattrs>
					<initialattributesets>
						<attributeset name="cancel" inherits-default="false">
						</attributeset>
					</initialattributesets>
					<finalattrs>
						<attr name="SELECTED_SLIDE" value="1"/>  //  mandatory input - dropdown input - slide where audio is inserted
					</finalattrs>
				</comp>
				<comp id="3" mode="new">
					<sizeandpos>
						<attr name="left" value="0"/>
						<attr name="bottom" value="0"/>
						<attr name="width" value="*"/>
						<attr name="height" value="31"/>
					</sizeandpos>
					<initialattrs>
						<attr name="OPENWORDFILE" value="p04h3Memory - PowerPoint"/> // already taken in ribbon
						<attr name="APPLICATION" value="ppt"/> // fixed
						<attr name="APP_TOOLTIP_IMAGE" value="XMLs/TaskXmls/exp/pp/04/03.01.t1/Assets/page_preview.png"/> // mandatory input - dropzone - preview image
					</initialattrs>
				</comp>
			</comps>
		</state>
		<state id="2" desc="insert audio dialog opened" txt="1">
			<comps>
				<comp id="5" mode="new">
					<sizeandpos>
						<attr name="width" value="720"/>
						<attr name="height" value="393"/>
						<attr name="left" value="center"/>
						<attr name="top" value="center"/>
					</sizeandpos>
					<initialattrs>
						<attr name="APPLICATION_MODE" value="4"/> // fixed
						<attr name="TREE_XML_PATH" value="XMLs/TaskXmls2016/exp/pp/04/03.01.t1/Assets/treeContent.xml"/> // mandatory input - dropzone - xml for painting // needs discussion
						<attr name="TREE_SELECTED_ITEM_ID" value="documents"/>  // mandatory input - textbox / dropdown discussion
						<attr name="INSERT_DIALOG_MODE" value="4"/> // fixed 
						<attr name="DIALOG_MODE" value="2"/> // fixed
						<attr name="AUTO_COMPLETE_LIST" value="Beethoven's_Symphony_No_9.wma"/> // can be filled from uploaded xml for tree content.
					</initialattrs>
					<finalattributesets>
						<attributeset name="set_1" inherits-default="false">
							<attr name="FILE_NAME" value="Beethoven's_Symphony_No_9.wma"/> // mandatory input -  1 inputs -   dropdown  -  for file name with extension.
						</attributeset>
						<attributeset name="set_2" inherits-default="false">
							<attr name="FILE_NAME" value="Beethoven's_Symphony_No_9"/>  // already covered in above attribute set
						</attributeset>
					</finalattributesets>
					<events>
						<event id="9997" desc="OK_BUTTON_CLICKED">
							<validate followup="3" operator="any">
								<comp id="5" validation-set="set_1"/>
								<comp id="5" validation-set="set_2"/>
							</validate>
						</event>
						<event id="9998" followup="1" desc="CANCEL_BUTTON_CLICKED" target-attribute-set="cancel"/>
					</events>
				</comp>
			</comps>
		</state>
		<state id="3" desc="audio place holder inserted">
			<comps>
				<comp id="5" mode="remove"/>
				<comp id="1" mode="edit">
					<initialattrs>
						<attr name="ACTIVATE_TAB" value="Audio Tools Format"/>  //fixed
						<attr name="ACTIVATE_TAB" value="Audio Tools Playback"/> //fixed
						<attr name="SEL_TAB" value="Audio Tools Playback"/>  //fixed
						<attr name="HIGHLIGHT_AUDIO_NO_STYLE" value="true"/>  //fixed
					</initialattrs>
				</comp>
				<comp id="2" mode="edit">
					<initialattrs>
						<attr name="PARTIAL_SLIDES_DATA" value="[{&quot;Number&quot;:&quot;1&quot;,&quot;ThumbHtml&quot;:&quot;&lt;img src='XMLs/TaskXmls2016/go/pp/05/5A.08.T1/Assets/Slides/Slide7.jpg'/&gt;&quot;}]"/> // mandatory input -  dropzone - for uploading changes slide image
					</initialattrs>
				</comp>
				<comp id="4" mode="new" subcomp="true" hostid="2" 
					hostparam='{"Mode":"VideoPlaceHolder","HostParams":{"slide":"1"}}'>
					<sizeandpos>
						<attr name="left" value="6.3"/>
						<attr name="top" value="3.4"/>
						<attr name="width" value="0.67"/>
						<attr name="height" value="0.67"/>
					</sizeandpos>
					<initialattrs>
						<attr name="MODE" value="AUDIO"/>  // fixed
						<attr name="IS_SELECTED" value="true"/>  // fixed
						<attr name="RESIZE_HANDLES_NEW" value="[[&quot;0px&quot;,&quot;0px&quot;],[&quot;50%&quot;,&quot;0px&quot;],[&quot;100%&quot;,&quot;0px&quot;],[&quot;0px&quot;,&quot;50%&quot;],[&quot;100%&quot;,&quot;50%&quot;],[&quot;0px&quot;,&quot;100%&quot;],[&quot;50%&quot;,&quot;100%&quot;],[&quot;100%&quot;,&quot;100%&quot;]]"/>  // fixed
					</initialattrs>
				</comp>
			</comps>
		</state>
	</states>
</task>
